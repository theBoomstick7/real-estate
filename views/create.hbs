<main>
    <section id="create-page">
        <div class="create-container">
            <div class="box-image"></div>

            <h2 class="box-heading"> Add new home</h2>


            <form class="form" action="/deals/create" method="post">
                <div class="input">
                    <input type="text" class="input-field" id="home-name" placeholder="Real House Luxury Villa..."
                        name="name" value="{{deals.name}}" />
                    <label class="home-name">Name:</label>
                </div>
                <div class="input">
                    <input type="text" class="input-field" id="type" placeholder="Villa..." name="type" value="{{deals.type}}" />
                    <label class="type">Property Type:</label>
                </div>
                <div class="input">
                    <input type="number" class="input-field" id="year" placeholder="2018..." name="year" value="{{deals.year}}" />
                    <label class="year">Year Built:</label>
                </div>
                <div class="input">
                    <input type="text" class="input-field" id="city" placeholder="Sofia..." name="city" value="{{deals.city}}" />
                    <label class="city">City</label>
                </div>

                <div class="input">
                    <input type="text" class="input-field" id="homeImage" placeholder="Image..." name="imageUrl"
                        value="{{deals.imageUrl}}" />
                    <label class="homeImage">Home Image:</label>
                </div>

                <div class="input">
                    <input type="text" class="input-field" id="description" placeholder="Description..."
                        name="description" value="{{deals.description}}" />
                    <label class="description">Property Description:</label>
                </div>

                <div class="input">
                    <input type="number" class="input-field" id="availablePieces" placeholder="1" name="pieces"
                        value="{{deals.pieces}}" />
                    <label class="availablePieces">Available pieces:</label>
                </div>

                <div class="create-action">
                    <button class="create-button">Add</button>
                </div>


            </form>
        </div>
    </section>

</main>